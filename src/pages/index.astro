---

// RUNTIME
const runtime = Astro.locals.runtime

const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT

} = runtime.env
const data = await homeAPI( ENVIRONMENT, ENDPOINT )

// API
import { homeAPI } from "@/api/home/index.js"

const {

	blogs,
	home_data,
	locations,
	meta_tags,
	studies,
	testimonials

} = data

// IMPORTS ASTRO LAYOUTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS HOME COMPONENT
import Home from "@/components/home/index.astro"

---
<Layout
	description={ meta_tags.description }
	image={ CDN + meta_tags.cover }
	title={ meta_tags.title }
>
	<Home
		blogs={ blogs }
		CDN={ CDN }
		ENVIRONMENT={ ENVIRONMENT }
		home_data={ home_data }
		locations={ locations }
		PROJECT={ PROJECT }
		studies={ studies }
		testimonials={ testimonials }
	/>
</Layout>
