---

// IMPORTS ASTRO ATOMS
import Link from "@/atoms/links/index.astro"
import Picture from "@/atoms/picture/internal/contain/index.astro"

// GET ASTRO PROPS
const {

    aria_label,
    href

} = Astro.props

---
<Link href={ href } aria_label={ aria_label }>
    <div class="flex gap-2 items-center group hover:cursor-pointer">
        <span class="uppercase text-lg text-gl_blue hover:text-black font-open_sans font-semibold tracking-widest">
            <slot />
        </span>
        <div class="size-6 group-hover:hidden">
            <Picture
                alternative_text="blue right arrow"
                source="/icons/blue_right_arrow.svg"
            />
        </div>
        <div class="size-6 hidden group-hover:block">
            <Picture
                alternative_text="dark blue right arrow"
                source="/icons/dark_blue_right_arrow.svg"
            />
        </div>
    </div>
</Link>
