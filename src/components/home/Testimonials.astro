---
const data = Array(4).fill({

    title: "[Gorilla Logic] has enabled the customer side of our business to really accelerate.",
    src: "",
    alt: ""

})
---
<section class="bg-gl_sky_blue">
    <div class="relative flex overflow-x-hidden">
        <div class="flex items-center animate-marquee whitespace-nowrap">
            {

                data.map( ( item ) => {

                    return (
                        <div class="flex gap-4 items-center border-r border-black px-14 py-4">
                            <p class="text-xl text-black select-none font-open_sans font-semibold">{ item.title }</p>
                            <div>
                                <img
                                    src={ item.src }
                                    alt={ item.alt }
                                    class="size-10"
                                />
                            </div>
                        </div>

                    )

                })

            }
        </div>
        <div class="flex items-center absolute top-0 animate-marquee2 whitespace-nowrap">
            {

                data.map( ( item ) => {

                    return (
                        <div class="flex gap-4 items-center border-r border-black px-14 py-4">
                            <p class="text-xl text-black select-none font-open_sans font-semibold">{ item.title }</p>
                            <div>
                                <img
                                    src={ item.src }
                                    alt={ item.alt }
                                    class="size-10"
                                />
                            </div>
                        </div>

                    )

                })

            }
        </div>
    </div>
</section>
