---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// GET PROPS
const {

    CDN,
    data,
    PROJECT

} = Astro.props

---
<section class="md:mt-28 py-10 md:pt-32 md:pb-48 h-full w-full relative bg-cover overflow-hidden bg-no-repeat" style=`background-image: url(${ CDN + PROJECT + "/" + data.cover + "?quality=80" })`>
    <Container>
        <section class="relative z-10 flex flex-col justify-between h-full">
            <div class="w-[80%]">
                <p class="text-white text-4xl md:text-6xl font-lora">Digital engineering challenges?</p>
                <div class="pt-2">
                    <span class="text-white text-6xl md:text-8xl font-lora">{ data.sub_title } <span class="text-gl_sky_blue italic">solutions.</span></span>
                </div>
                <div class="pt-8">
                    <p class="text-lg md:text-xl text-white font-open_sans">{ data.description }</p>
                </div>
            </div>
            <div class="pt-4">
                <p class="text-xl md:text-4xl text-white font-lora">{ data.button_title }</p>
            </div>
        </section>
    </Container>
    <section class="absolute top-0 left h-full w-full bg-gradient-to-l from-[#061b36e6] to-[#061b3613]" />
</section>
