---
const data = Array(2).fill({

    src: "/hero-1.webp"

})
---
<section class="hidden md:flex md:col-span-2">
    {

        data.map( ( value, index ) => {

            return(
                <div class={ index % 2 === 0 ? "w-60 h-80 bg-zinc-200 animate-sliding relative z-0" : "w-60 h-72 bg-zinc-200 animate-slow_sliding relative z-0"}>
                    <img
                        src={ value.src }
                        alt=""
                        class="w-full h-full object-cover"
                    />
                </div>
            )

        })

    }
</section>
