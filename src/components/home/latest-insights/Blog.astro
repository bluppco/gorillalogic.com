---
// IMPORT ASTRO ATOMS
import ArrowAnchor from "../../../atoms/ArrowAnchor.astro"
import H3 from "../../../atoms/H3.astro"

// IMPORT CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../../constants/cdn"

const {

    src,
    alt,
    title

} = Astro.props
---
<div class="space-y-6">
    <div class="w-full aspect-video bg-zinc-200">
        <img
            src={ CDN_LINK + src + "?quality=" + IMAGE_QUALITY }
            alt={ alt }
            class="h-full w-full"
        />
    </div>
    <div class="md:h-40">
        <H3>{ title }</H3>
    </div>
    <ArrowAnchor>Read More</ArrowAnchor>
</div>

