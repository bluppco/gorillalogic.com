---
// IMPORT ASTRO ATOMS
import ArrowAnchor from "../../../atoms/ArrowAnchor.astro"
import HeadingThree from "../../../atoms/heading/Three.astro"

// IMPORT CONSTANTS
import { CDN_LINK, IMAGE_QUALITY, IMAGE_WIDTH } from "../../../constants/cdn"

const {

    src,
    alt,
    title

} = Astro.props
---
<div class="space-y-6">
    <div class="w-full aspect-video bg-zinc-200">
        <img
            src={ CDN_LINK + src + "?quality=" + IMAGE_QUALITY + "&width=" + IMAGE_WIDTH }
            alt={ alt }
            class="h-full w-full"
        />
    </div>
    <div class="md:h-40">
        <HeadingThree>{ title }</HeadingThree>
    </div>
    <ArrowAnchor>Read More</ArrowAnchor>
</div>
