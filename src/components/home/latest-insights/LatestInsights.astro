---
// IMPORT ASTRO ATOMS
import Button from "../../../atoms/Button.astro"
import H2 from "../../../atoms/H2.astro"
import OpenSansH3 from "../../../atoms/OpenSansH3.astro"

// IMPORT ASTRO LAYOUTS
import Container from "../../../layouts/Container.astro"

// IMPORT ASTRO COMPONENTS
import Blog from "./Blog.astro"

const { insights } = Astro.props

const data = Array(3).fill({

	title: "How Design Thinking Shapes Business Strategy",
	src: "",
	alt: ""

})
---
<Container>
	<section class="py-20">
		<div>
			<OpenSansH3>{ insights.title }</OpenSansH3>
			<H2>{ insights.sub_title }</H2>
		</div>
		<div class="grid md:grid-cols-3 gap-8 py-14">
			{

				data.map( ( item ) => {

					return(
						<Blog
							src={ item.src }
							alt={ item.alt }
							title={ item.title }
						/>
					)

				})

			}
		</div>
		<div class="flex justify-center">
			<Button>Explore more insights</Button>
		</div>
	</section>
</Container>