---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import Link from "@/atoms/links/index.astro"

---
<section class="grow h-full w-full flex flex-col justify-center items-center py-40 pt-60">
    <Container>
        <div class="space-y-10">
            <p class="text-3xl md:text-7xl font-black uppercase text-gl_blue text-center">404 - Page not found</p>
            <div class="md:w-[70%] mx-auto">
                <p class="text-lg md:text-xl font-open_sans text-center">Looks like you've ventured into uncharted territory. Don't worry; even the best explorers take a wrong turn now and then. Let's get you back on track.</p>
            </div>
            <div class="flex justify-center mb-20">
                <Link href="/" aria_label="Go to home page">
                    <button class="h-14 bg-gl_blue hover:bg-gl_sky_blue rounded-full px-8 text-white hover:text-black uppercase font-open_sans">Go to home page</button>
                </Link>
            </div>
        </div>
    </Container>
</section>
