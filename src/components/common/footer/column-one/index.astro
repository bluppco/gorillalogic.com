---

// IMPORTS ASTRO ATOMS
import FooterHeading from "@/atoms/footer/heading/index.astro"

// GET ASTRO PROPS
const {

    data,
    title

} = Astro.props

---
<div class="flex flex-col col-span-2 md:pr-10">
    <div class="pb-2">
        <FooterHeading>{ title }</FooterHeading>
    </div>
    {

        data.map( ( item ) => {

            return (
                <div class="flex items-center gap-4">
                    <ul class="py-1">
                        <li class="text-white font-lora text-3xl md:text-4xl leading-normal">
                            { item.data.title }
                        </li>
                    </ul>
                </div>
            )

        })

    }
</div>
