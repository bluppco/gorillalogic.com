---

// IMPORTS ASTRO ATOMS
import FooterHeading from "@/atoms/footer/heading/index.astro"
import Link from "@/atoms/links/index.astro"

// GET ASTRO PROPS
const {

    data,
    title

} = Astro.props

---
<div class="flex flex-col">
    <div class="pb-2">
        <FooterHeading>{ title }</FooterHeading>
    </div>
    {

        data.map( ( item ) => {

            return (
                <div class="flex items-center gap-4">
                    <ul class="py-1">
                        <li class="text-white hover:text-gl_sky_blue md:text-xl font-open_sans font-light">
                            <Link href={ item.data.link } aria_label={ item.data.title }>
                                { item.data.title }
                            </Link>
                        </li>
                    </ul>
                </div>
            )

        })

    }
</div>
